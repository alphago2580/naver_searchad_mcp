{
  "dxt_version": "0.1",
  "name": "naver-searchad",
  "display_name": "Naver SearchAd",
  "version": "0.2.6",
  "description": "Naver SearchAd keyword stats & bid estimate tools (embedded Python, no host Python needed)",
  "author": { "name": "Your Name", "email": "you@example.com" },
  "homepage": "https://github.com/alphago2580/naver_searchad_mcp",
  "repository": { "type": "git", "url": "https://github.com/alphago2580/naver_searchad_mcp" },
  "license": "Proprietary",
  "server": {
    "type": "python",
    "entry_point": "server/main.py",
    "mcp_config": {
      "command": "python",
      "args": ["${__dirname}/server/main.py"],
      "env": {
        "PYTHONPATH": "${__dirname};${__dirname}/server/lib",
        "NAVER_API_KEY": "${user_config.api_key}",
        "NAVER_SECRET_KEY": "${user_config.secret_key}",
        "NAVER_CUSTOMER_ID": "${user_config.customer_id}"
      },
      "platform_overrides": {
        "win32": {
          "command": "${__dirname}/runtime/win32/python/python.exe",
          "args": ["${__dirname}/server/main.py"],
          "env": {
            "PYTHONPATH": "${__dirname};${__dirname}/server/lib"
          }
        }
      }
    }
  },
  "tools": [
    {"name": "health", "description": "Health check: returns static ok message"},
    {"name": "get_keyword_stats", "description": "Fetch keyword stats (batching + optional cache)"},
    {"name": "estimate_average_position_bids", "description": "Estimate average position bids"}
  ],
  "prompts_generated": false,
  "keywords": ["naver","searchad","ads","marketing","mcp"],
  "compatibility": {
    "claude_desktop": ">=0.10.0",
    "platforms": ["win32"]
  },
  "user_config": {
    "api_key": {
      "type": "string",
      "title": "API Key",
      "description": "NAVER API Key",
      "sensitive": true,
      "required": true
    },
    "secret_key": {
      "type": "string",
      "title": "Secret Key",
      "description": "NAVER Secret Key",
      "sensitive": true,
      "required": true
    },
    "customer_id": {
      "type": "string",
      "title": "Customer ID",
      "description": "NAVER Customer ID",
      "sensitive": false,
      "required": true
    }
  }
}
